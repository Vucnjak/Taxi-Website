 *{
	margin: 0px;
	padding: 0px;
	text-decoration: none;
	list-style: none;
 }
 
			html,body {
			margin:0;
			padding:0;
			overflow-x:hidden;
			font-family: 'Arial', sans-serif;
			display: flex;
			flex-direction: column;
			min-height: 100vh;
}
			
			
		.header{
			width: 100%;
			height: 80px;
			display: block;
			background-color: #101010;
			position: relative;
			}	
			
			
		.inner_header{
			width: 1000px;
			height: 100%;
			display:block;
			margin: 0 auto;
		}
		
		
		.logo_container{
			height: 100%;
			display: table;
			float: left;
		}
		
		
		.logo_container h1{
			color: white;
			height: 100%;
			display: table-cell;
			vertical-align: middle;
			font-family: 'Montserrat';
			font-size: 32px;
			font-weight: 200;
		}
		
		
		.logo_container h1 span{
			font-weight: 800;
		}
		
		.navigation{
			float: right;
			height: 100%;
		}
		
		
		.navigation a{
			height: 100%;
			display: table;
			float: left;
			padding: 0px 20px;
		}
		
		
		.navigation a li{
			display: table-cell;
			vertical-align: middle;
			height: 100%;
			color: white;
			font-family: 'Montserrat';
			font-size: 26px;
		}
		
		
		.navigation i{
			position: relative;
			top: 5px;
			left: 52px;
		}
		
		
		.navigation a {
			float: left;
			text-align: center;
			padding: 12px;
			color: white;
			text-decoration: none;
			font-size: 17px;
		}
		
		
		.navigation a:hover{
			background: #333333;
		}
		
		
		.footer{
			position: relative;
			width: 100vw;
			display: block;
			overflow: hidden;
			padding: 40px 0;
			box-sizing: border-box;
			background-color: #18181a;
			margin-top: auto;
		}
		
		
		.inner_footer{
			display: block;
			margin: 0 auto;
			width: 1100px;
			height: 100%;
		}
		
		
		.inner_footer .footer_logo{
			width: 35%;
			float: left;
			height: 100%;
			display: block;
		}
		
		
		.inner_footer .footer_logo img{
			width: 120px;
			height: auto;
		}
		
		
		
		.inner_footer .footer_second{
			width: calc(21.6666666667% - 20px);
			margin-right: 10px;
			float: left;
			height: 100%;
		}
		
		
		.inner_footer .footer_second: last-child{
			margin-right: 0;
		}
		
		
		.inner_footer .footer_second h1{
			font-family: 'Arial';
			font-size: 22px;
			color: white;
			display: block;
			width: 100%;
			margin-bottom: 20px;
		} 	
			
			
			.inner_footer .footer_second a{
			font-family: 'Arial';
			font-size: 18px;
			color: white;
			display: block;
			font-weight: 200;
			width: 100%;
			margin-bottom: 20px;
			padding-bottom: 5px;
			} 	
			
			
			.inner_footer .footer_second li{
				display: inline-block;
				padding: 0 5px;
				font-size: 20x;
			}
			
			
			.inner_footer .footer_second a:hover{
					background: #333333;
				}
			
			
			.inner_footer .footer_second li:hover{			
			background: #333333;
				}
				
				
			.inner_footer .footer_span span{
				color: white;
				font-family: 'Arial';
				font-size: 16px;
				font-weight: 200;
				width: 100%;
				padding-top: 20px;
				float: top right;
			}
			
			
			@media(max-width: 1280px){
				.footer .inner_footer{
					width: 90%;
				}
								
				.inner_footer .footer_logo, inner_footer .footer_second{
					width: 100%;
					margin-bottom: 30px;
				}
			}
			
		
				.pozadina{
				background-image: url(images/nyctaxi.jpg);
				height: 100vh;
				width: 100vw;
				background-repeat: no-repeat;
				position: relative;
				background-size: cover;
				background-position: 50% 50%;
			}			
			
			
			.pozadina img{
				display: block;
				width: 100vw;
				height: 100vh;	
				position: relative;
				background-repeat: no-repeat;
			}
			
			
			
			
			.privacy{
				position: absolute;
				top: 0;
				height: 100%;
				background: rgba(0,0,0,0.6);
				color: #ffffff;
				text-align-last: center;
				overflow: auto;
			}
			
				
			
			.image_title{
				padding: 50px;
				font-size: 2.5em;
				font-weight: bold;
			}
			
			.description{
				font-size: 1.20em;
				margin-top: 0.25em;
				padding-top: 30px;
				padding-bottom: 30px;
				margin: 0px 50px 0px 50px; 
				cursor: pointer;
				
				
			}
			
			.indextext_image{
				height: 100vh;
				width: 100vw;
				background-repeat: no-repeat;
				position: relative;
				background-size: cover;
				background-position: 50% 50%;
			}
			
			.indextext_image img{
				display: block;
				width: 100%;
				height: 100%;
				position: relative;
				background-repeat: no-repeat;
				position: static;
				
			}
			
			.indextext_overlay{
				position: absolute;
				top: 0;
				width: 100%;
				height: 100%;
				background: rgba(0 , 0 , 0 , 0.6);
				color: #ffffff;
				font-family: 'Montserrat', sans-serif;
				display: flex;
				flex-direction: column;
				align-items: center;
				text-align-last: center;
				justify-content: center; 
			}
			
			.indextext_overlay a{
				font-family: inherit;
				font-size: inherit;
				color: #FF5733 ;		
			}
			
			
			.indextext_title{
				font-size: 5em;
				font-weight: bold;
				 margin: 20px auto;
			}
			
			.indextext_description{
				display: block;
				margin-block-start: 1em;
				margin-block-end: 1em;
				margin-inline-start: 0px;
				margin-inline-end: 0px; 
			}
			
			.advertisement_overlay{
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: rgba(0 , 0 , 0 , 0.6);
				color: #ffffff;
				font-family: 'Montserrat', sans-serif;
				display: flex;
				flex-direction: column;
				align-items: center;
				text-align-last: center;
				justify-content: center;
			}
			
			.advertisement_overlay a{
				font-family: inherit;
				font-size: inherit;
				color: #FF5733;
			}
			
			.advertisement_title{
				font-size: 5em;
				font-weight: bold;
			}
			
			.advertisement_description{
				display: block;
				margin-block-start: 5em;
				margin-block-end: 1em;
				margin-inline-start: 30px;
				margin-inline-end: 30px; 
			}
			
			 .advertisement_indextext_image {
				 height: 100vh;
				width: 100vw;
				background-repeat: no-repeat;
				position: relative;
				background-size: cover;
				background-position: 50% 50%;
			 }
			 
			  .indextext_overlay .reklama{
				  margin: 20px auto;
				 width: 40vw;
				 height: 50vh;
				} 
			
				.indextext_overlay .portrait {
				 margin: 5px auto;
				 width: 17vw;
				 height: 35vh;
				}
			
			
			
			
			
			